-- The expanded type for 'add' should be used when expanding the body
-- of 'length'.
module Test where
data List (a : Data) where {
        Nil : List a;
        Cons : a -> List a -> List a;
}
add : [a : Data].a -> a -> a
  = /\(a : Data).
     \(x y : a). add# [a] x y
length : [a : Data].List a -> Nat
  = /\(a : Data).
     \(xx : List a).
    case xx of {
      Nil  
       -> 0;
      Cons x xs 
       -> add [?] 1 (length [?] xs)
    }

