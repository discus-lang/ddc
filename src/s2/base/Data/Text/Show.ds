module Data.Text.Show
export
{       showBool;

        showNat;
        showBinaryNat;  digitBinary;
        showDecimalNat; digitDecimal;
        showHexNat;     digitHex;
        showBaseNat;
        showFloat32;
        showFloat64;
}
import Data.Numeric.Word8
import Data.Numeric.Float32
import Data.Numeric.Float64
